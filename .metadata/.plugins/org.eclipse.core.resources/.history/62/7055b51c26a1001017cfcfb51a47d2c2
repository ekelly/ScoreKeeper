package net.erickelly.score;


public class Player {
		
	String name;
	Integer score;
	// for database lookups
	Integer id;
	
	public Player(String name, Integer score, Integer id) {
		this.name = name;
		this.score = score;
		this.id = id;
	}
	
	public void updateScore(int i) {
		score = score + i;
	}

}
